<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">Follow Users</h1>
    </div>
    <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
            <td><%= user.name %></td>
            <td><%= user.following_user.count %>follows</td>
            <td><%= user.follower_user.count %>follower</td>
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>