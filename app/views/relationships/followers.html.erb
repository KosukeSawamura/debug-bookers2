<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">Follower Users</h1>
    </div>
    <div class="row justify-content-center">

      <div class="one-post card w-100">

        <thead>
          <tr>
            <th>image</th>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
            <td><%= user.name %></td>
            <td><%= user.following_user.count %>follows</td>
            <td><%= user.follower_user.count %>follower</td>
          </tr>
          <% end %>
        </tbody>



      </div>

    </div>

  </div>
</div>